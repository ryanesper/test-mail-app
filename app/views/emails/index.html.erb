<div class="container">
	<%= render 'shared/messages' %>
	<h1 class="text-center">Test Email App</h1>
	<div class="row justify-content-center">
		<div class="col-6 p-5 shadow">
			<%= form_with(scope: :emails, url: emails_path, method: :post, local: true) do |f| %>
				<div class="row">
					<div class="col-8">
						<div class="form-group">
							<%= f.label :email, class: 'form-label' %>
							<%= f.text_field :email, class: 'form-control' %>			
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							<%= f.label :datetime, class: 'form-label' %>
							<%= f.datetime_field :datetime, class: 'form-control' %>			
						</div>
					</div>
				</div>
				<%= f.submit 'Send', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>