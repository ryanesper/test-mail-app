<div class="container">
	<%= render 'shared/messages' %>
	<h1 class="text-center">Test Email App</h1>
	<!-- <p><%= Time.parse("2020-11-18T21:50").to_i - Time.now.to_i %></p>
	<p><%=  %></p> -->
	<div class="row justify-content-center">
		<div class="col-10 p-5 shadow">
			<%= form_with(scope: :mail, url: emails_path, method: :post, local: true) do |f| %>
				<div class="row">
					<div class="col-12">
						<div class="form-group">
							<%= f.label 'to', class: 'form-label' %>
							<%= f.text_field :email, class: 'form-control' %>			
						</div>
					</div>	
				</div>
				<div class="row">
					<div class="col-8">
						<div class="form-group">
							<%= f.label :subject, class: 'form-label' %>
							<%= f.text_field :subject, class: 'form-control' %>			
						</div>
					</div>	
					<div class="col-4">
						<div class="form-group">
							<%= f.label :datetime, class: 'form-label' %>
							<%= f.datetime_field :datetime, class: 'form-control' %>			
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<div class="form-group">
							<%= f.label '', class: 'form-label' %>
							<%= f.text_area :message, rows: 8, class: 'form-control' %>			
						</div>
					</div>	
				</div>
				<%= f.submit 'Send', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>